@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="jumbotron text-center">
    <h1 class="display-4">Welcome</h1>
    <p class="lead">Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@if (!string.IsNullOrEmpty(Request.Query["errorMessage"]))
{
    <div class="alert alert-danger" role="alert">
        @Request.Query["errorMessage"]
    </div>
}

<nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand">Stuff</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <button class="btn btn-dark dropdown-toggle" type="button" id="itemDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        Item
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="itemDropdown">
                        <li><a class="dropdown-item" href="/Items/Index">Show all items</a></li>
                        <li><a class="dropdown-item" href="/Items/Create">Create</a></li>
                    </ul>
                </li>
                <li class="nav-item dropdown">
                    <button class="btn btn-dark dropdown-toggle" type="button" id="memberDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        Member
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="memberDropdown">
                        <li><a class="dropdown-item" href="/Members/ShowAllMembers">Show all Members</a></li>
                        <li><a class="dropdown-item" href="/Members/Create">Create</a></li>
                    </ul>
                </li>
                <li class="nav-item dropdown">
                    <button class="btn btn-dark dropdown-toggle" type="button" id="ordersDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        Orders
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="ordersDropdown">
                        <li><a class="dropdown-item" href="/Orders/ShowAllOrders">Show all Orders</a></li>
                        <li><a class="dropdown-item" href="/Orders/Create">Create</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>
