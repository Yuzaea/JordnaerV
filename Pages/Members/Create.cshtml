@page
@model Jordnaer.Pages.Members.CreateModel
@{
}
<h1>Create Member</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Member.Name"></label>
        <input class="form-control" asp-for="Member.Name" />
        <span asp-validation-for="Member.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Member.Email"></label>
        <input class="form-control" asp-for="Member.Email" />
        <span asp-validation-for="Member.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Member.Password"></label>
        <input class="form-control" asp-for="Member.Password" />
        <span asp-validation-for="Member.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

